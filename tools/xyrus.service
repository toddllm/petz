[Unit]
Description=Xyrus Mod Agent (All-powerful Luanti mod creator)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=tdeshane
WorkingDirectory=/home/tdeshane/luanti
Environment=HOST=0.0.0.0
Environment=PORT=8088
Environment=OLLAMA_HOST=http://127.0.0.1:11434
# Optional: set to true to pull models on start (usually keep false)
Environment=OLLAMA_PULL_ON_START=false
ExecStart=/home/tdeshane/luanti/tools/start_xyrus.sh
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
